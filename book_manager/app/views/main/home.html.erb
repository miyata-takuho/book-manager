<h1>Book</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@books) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %><br><br>
      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.submit "register", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
