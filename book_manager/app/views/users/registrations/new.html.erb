<div class="container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<% if resource.errors.any? %>
  <div class="alert alert-danger">
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>
<% end %>
  <div class="box">
    <h1 class="user-title">Sign up</h1>
    <div class="field">
      <%= f.text_field :name, autofocus: true, autocomplete: "username", class: "text-field", placeholder: "Your Name" %>
    </div>

    <div class="field">

      <%= f.email_field :email, autocomplete: "email", class: "text-field", placeholder: "Email Address" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "new-password", class: "text-field", placeholder: "Password (6 characters minimum)" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "text-field", placeholder: "Password Confirmation" %>
    </div>

    <div class="btn btn-primary actions">
      <%= f.submit "Sign up", class: "button" %>
    </div>
    <% end %>
    <div class="link">
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
