<h1 class="head-title">Return</h1>

<h3 class='page-title'>Return</h3>
<div class="white-box">
  <%= form_for :book, url: "/books/#{@book.id}/return" do |f| %>
    <%= f.label :title %><br>
    <%= f.text_field :title, {class: "form-control", value: @book.title} %><br>
    <%= f.label :description %><br>
    <%= f.text_area :description, {class: "form-control"} %><br>
    <%= f.label :rating %><br>
    <%= f.select :rating_sum, [['very bad', 1], ['bad', 2], ['ok', 3], ['good', 4], ['excelent', 5]], {}, {class: "form-control"} %><br>
    <%= f.hidden_field :user_id, value: current_user.id%>
    <%= f.submit "Return", class: "btn btn-primary" %>
  <% end %>
</div>
