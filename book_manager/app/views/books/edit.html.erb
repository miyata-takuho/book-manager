<h1 class="head-title">Edit</h1>
<h3 class='page-title'>Update</h3>
  <div class="white-box">
    <%= form_for :book, url: "/books/#{@books.id}/update" do |f| %>
      <%= f.label :title %><br>
      <%= f.text_field :title, {class: "form-control", value: @books.title} %><br>
      <%= f.label :description %><br>
      <%= f.text_area :description, {class: "form-control", value: @books.description} %><br>
      <%= f.label :rating %><br>
      <%= f.select :rating, [['very bad', 1], ['bad', 2], ['ok', 3], ['good', 4], ['excelent', 5]], {}, {class: "form-control"} %><br>
      <%= f.hidden_field :user_id, value: current_user.id%>
      <%= f.submit "Update", class: "btn btn-primary" %>
    <% end %>
  </div>
